# Server Configuration
PORT=3000
NODE_ENV=development

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=acoustic-customer-journey
KAFKA_GROUP_ID=customer-journey-workflow

# Kafka Topics
KAFKA_TOPIC_CUSTOMER_EVENTS=customer-events
KAFKA_TOPIC_WORKFLOW_TRIGGERS=workflow-triggers
KAFKA_TOPIC_EMAIL_NOTIFICATIONS=email-notifications

# Kafka UI Configuration
KAFKA_UI_PORT=8080

# Application Configuration
DEMO_MODE=true
WORKFLOW_REMINDER_DELAY_MS=30000
KAFKAJS_NO_PARTITIONER_WARNING=1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Email Configuration (for future use)
EMAIL_SERVICE_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
